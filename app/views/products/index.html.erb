<p id="notice"><%= notice %></p>
  <!--Page -->
  <div class = "container">

  <% @productCount = 0 %>
  <% @products.each do |product| %>

    <% if @productCount % 3 == 0 %>
    <div class="row">
    <% end %>
      <div class="col-md-4">
        <div class="thumbnail">
          <img src="http://placehold.it/350x150" alt="product placeholder">
          <div class="caption">
            <h4 class="pull-right"><%= product.price%></h4>
            <h4><a href="#"><%= product.name %></a></h4>
            <p><%= link_to 'Show', product %><br>
            <%= link_to 'Edit', edit_product_path(product)%><br>
           <%= link_to 'Destroy', product, method: :delete,
           data: { confirm: 'Are you sure?' } %><br>
          <%= @productCount %><br>
          <%= @productCount % 3 %>
          </div>
        </div>
      </div>
   <% if @productCount % 3 ==2 %>
   </div>
   <% end %>
   <% @productCount +=1 %>
  <% end %>


